<h1>My tasks</h1>


<% @tasks.each do |task| %>
<p> <%= check_box_tag 'completed', 1, task.completed %>
   <%= link_to task.title, task_path(task) %>
   <%= link_to "X", task_path(task), method: :delete, data: { confirm: "Are you sure?" }%>
</p>
<% end  %>

<p><%= link_to("new task", new_task_path()) %></p>
    